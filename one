#include <iostream>
#include <string>
using namespace std;
struct node
{
    string subname,duration;
    node *next;
};

void print(node* head)
{
  for ( ; head; head = head->next )
  {
    cout << head->subname<<" ("<<head->duration<<")  ";
  }
}

int main()
{
    node *A[5];
    node *temp,*temp1;
    string facultyname;
    cout<<"Enter name of faculty"<<endl;
    cin>>facultyname;
    int noLec,i;
    cout<<"Enter no.of lecture"<<endl;
    cin>>noLec;

    for(i=0;i<5;i++)
    {
        A[i]=NULL;
    }

    for(i=0;i<noLec;i++)
    {
        cout<<"Enter the day"<<endl;
        int day;
        cin>>day;
        temp=new node;
        cout<<"Subject name"<<endl;
        cin>>temp->subname;
        cout<<"Duration"<<endl;
        cin>>temp->duration;
        temp->next=NULL;

        if(A[day-1]==NULL)
        {
            A[day-1]=temp;
        }
        else
        {
            temp1=A[day-1];
            while(temp1->next!=NULL)
            {
                temp1=temp1->next;
            }
            temp1->next=temp;
        }
    }

    cout<<"----Your TimeTable----"<<"Assume Day 1 as Monday and so on-----"<<endl;
    for(i=0;i<5;i++)
    {
        cout<<"Day "<<i+1<<":";
        print(A[i]);
        cout<<endl;
        cout<<endl;
    }
    return 0;
}
